@model IEnumerable<TeknikServis.Entities.Auth.AppUser>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";  
    ViewData["Title"] = "Admin Yönetimi";
}

<h2>Admin Kullanıcılar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Select((val, i) => (val, i)))
        {
            <tr>
                <td>@(u.i + 1)</td>
                <td>@u.val.UserName</td>
                <td>@u.val.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@u.val.Id" onsubmit="return confirm('Silinsin mi?')">
                        <button class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Yeni Admin Ekle</h3>
<form asp-action="Create" method="post" class="row g-2 w-50">
    <div class="col-md-5">
        <input name="email" class="form-control" placeholder="E-posta" />
    </div>
    <div class="col-md-4">
        <input name="password" class="form-control" placeholder="Parola" />
    </div>
    <div class="col-md-3">
        <button class="btn btn-success w-100">Ekle</button>
    </div>
</form>
