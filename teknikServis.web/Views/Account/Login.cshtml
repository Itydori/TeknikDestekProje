@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Admin Giriş";
}

<h2 class="text-center">Admin Giriş</h2>

<form asp-action="Login" method="post" class="w-25 mx-auto">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input name="email" class="form-control" type="text" />
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Parola</label>
        <input name="password" class="form-control" type="password" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

    <div asp-validation-summary="All" class="text-danger mt-2"></div>
</form>

