@model List<Musteri>
@{
	ViewBag.title = "Müşteri Düzenleme";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>
	Müşteri Listesi
</h2>
<p>
	<a asp-action="Create" class="btn btn-info">Yeni Müşteri Ekle</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Adı
			</th>
			<th>
				Telefon
			</th>
			<th>
				Adres
			</th>
			<th>
				Eposta
			</th>
			<th>
				İşlem
			</th>
			<th>
				Aktif
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.Ad
				</td>
				<td>
					@item.Telefon
				</td>
				<td>
					@item.Adres
				</td>
				<td>
					@item.Eposta
				</td>
				<td>
					<a asp-action="Edit" asp-route-MusteriId="@item.MusteriId" class="btn btn-primary">Düzenle</a>
					<a asp-action="Details" asp-route-MusteriId="@item.MusteriId" class="btn btn-info">Detay</a>
					<a asp-action="Delete" asp-route-MusteriId="@item.MusteriId" class="btn btn-danger">Sil</a>
				</td>
				<td>
					@if (item.Aktif)
					{
						<span class="text-success">Aktif</span>
					}
					else
					{
						<span class="text-danger">Pasif</span>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
