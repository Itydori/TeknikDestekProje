@model IEnumerable<İslem>
@{
	ViewBag.Title = @ViewBag.Title;
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("IslemKaydet", "IsEmri"))
{
	<input type="text"  value="@ViewBag.IsEmriTeslimId" hidden/>

	<input type="text" name="IsEmriId" value="@ViewBag.IsEmriTeslimId" hidden />

	<div class="container mt-4">
		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h4 class="mb-0"><i class="fas fa-cogs mr-2"></i> Onarım İşlemi</h4>
			</div>
			<div class="card-body">
				<form id="repairOrderForm">
					<div class="row mb-4">
						<div class="col-md-6 mb-3">
							<label for="OnarimYapan" class="form-label fw-bold">Onarımı Yapan Kişi</label>
							<input type="text" class="form-control" id="OnarimYapan" name="OnarimYapan" placeholder="Onarımı Yapan Kişi" />
						</div>
						<div class="col-md-6 mb-3">
							<label for="OnarimTarihi" class="form-label fw-bold">Onarım Tarihi</label>
							<input type="date" class="form-control" id="OnarimTarihi" name="OnarimTarihi" />
						</div>
					</div>

					<div class="row mb-4">
						<div class="col-md-6 mb-3">
							<label for="StokYeri" class="form-label fw-bold">Stok Yeri</label>
							<input type="text" class="form-control" id="StokYeri" name="StokYeri" placeholder="Stok Yeri" />
						</div>
						<div class="col-md-6 mb-3">
							<label for="YapilanIslemler" class="form-label fw-bold">Yapılan İşlemler</label>
							<textarea class="form-control" id="YapilanIslemler" name="YapilanIslemler" placeholder="Yapılan işlemleri açıklayınız" rows="3"></textarea>
						</div>
					</div>

					<div class="row mb-4">
						<div class="col-md-6 mb-3">
							<label for="Ucret" class="form-label fw-bold">Ücret Bilgisi</label>
							<input type="number" class="form-control" id="Ucret" name="Ucret" placeholder="Ücret" step="0.01" />
						</div>
						<div class="col-md-6 mb-3">
							<label for="Aciklama" class="form-label fw-bold">Açıklama</label>
							<textarea class="form-control" id="Aciklama" name="Aciklama" placeholder="Ekstra açıklamalar" rows="3"></textarea>
						</div>
					</div>

					<div class="d-flex justify-content-end mt-4">
						<button type="button" class="btn btn-secondary me-2">İptal</button>
						<button type="submit" class="btn btn-success">
							<i class="fas fa-save me-1"></i> Onarım İşlemi Kaydet
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="container mt-4">
		<div class="card shadow-sm">
			<div class="card-header bg-warning text-black d-flex justify-content-between align-items-center">
				<h4 class="mb-0"><i class="fas fa-list mr-2"></i> Açık İş Emirleri</h4>
			</div>
			<div class="card-body">
				<table class="table table-striped table-hover">
					<thead class="table-dark">
						<tr>
							<th>Onarımı Yapan</th>
							<th>Onarım Tarihi</th>
							<th>Stok Yeri</th>
							<th>Yapılan İşlemler</th>
							<th>Ücret Bilgisi</th>
							<th>Açıklama</th>
							<th>İşlem</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.OnarimYapan</td>
								<td>@item.OnarimTarihi</td>
								<td>@item.StokYeri</td>
								<td>@item.YapilanIslemler</td>
								<td>@item.Ucret.ToString("C")</td>
								<td>@item.Aciklama</td>
								<td>
									@* <div style="display: inline-block;">
										<form method="post" asp-action="Delete" asp-route-isEmriTeslimId="@item.IsEmriTeslimId" onsubmit="return confirm('Bu İş Emri silinecek, emin misiniz?');">
											<button type="submit" class="btn btn-danger btn-sm">Sil</button>
										</form>
									</div> *@
									@* <form method="post" asp-action="Delete" asp-route-isEmriTeslimId="@item.IsEmriTeslimId" onsubmit="return confirm('Bu İş Emri silinecek, emin misiniz?');">
										<button type="submit" class="btn btn-danger btn-sm">Sil</button>
									</form> *@
									<a href="#" onclick="deleteIsEmri(@item.IsEmriTeslimId);" class="btn btn-danger btn-sm">Sil</a>

									<script>
										function deleteIsEmri(isEmriTeslimId) {
											if (confirm('Bu İş Emri silinecek, emin misiniz?')) {
												var form = document.createElement('form');
												form.method = 'POST';
												form.action = '@Url.Action("Delete", "IsEmri")';

												var input = document.createElement('input');
												input.type = 'hidden';
												input.name = 'isEmriTeslimId';
												input.value = isEmriTeslimId;

												form.appendChild(input);
												document.body.appendChild(form);
												form.submit();
											}
										}
									</script>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
