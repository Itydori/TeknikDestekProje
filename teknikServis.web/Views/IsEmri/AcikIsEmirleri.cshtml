@model List<IsEmriTeslim>
@{
	ViewBag.title = "Açık İş Emirleri";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-black d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-list mr-2"></i> Açık İş Emirleri</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>İş Emri No</th>
                            <th>Müşteri</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Arıza / Hizmet Talebi</th>
@*                             <th>Servis Talebi</th>
 *@                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IsEmriTeslimId</td>
                            <td>@(item.Musteri != null ? item.Musteri.Ad : "Müşteri Yok")</td>
                            <td>@item.Marka</td>
                            <td>@item.Model</td>
@*                                 <td>@item.ArizaDurumu</td>
                        *@
                            <td>@item.ArizaDurumu / @item.ServisTalebi</td>
                                <td>
                                    
                                <a href="@Url.Action("IslemYap", "IsEmri", new { isEmriTeslim = item.IsEmriTeslimId })" class="btn btn-sm btn-primary">
                                        İşlem Yap
                                    </a>
                                <form action="@Url.Action("IsEmriSil", "IsEmri")" method="post" style="display:inline;" onsubmit="return confirm('Bu iş emrini silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@item.IsEmriTeslimId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
